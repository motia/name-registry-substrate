run-tmp:
	cargo run -- --dev --tmp

run:
	cargo run -- --dev

build:
	cargo build

check:
	SKIP_WASM_BUILD= cargo check --all --tests

test:
	SKIP_WASM_BUILD= cargo test --all -- --show-output

purge:
	cargo run -- purge-chain --dev -y

restart: purge run

benchmark-output:
	cargo run --manifest-path node/Cargo.toml --release --features runtime-benchmarks -- benchmark --extrinsic '*' --pallet pallet_template --output runtime/src/weights/pallet_template.rs --execution=wasm --wasm-execution=compiled

benchmark-traits:
	cargo run --manifest-path node/Cargo.toml --release --features runtime-benchmarks -- benchmark --extrinsic '*' --pallet pallet_template --output pallets/template/src/weights.rs --template=frame-weight-template.hbs --execution=wasm --wasm-execution=compiled

test-benchmark:
	cargo test --manifest-path pallets/template/Cargo.toml --features runtime-benchmarks -- --nocapture
